<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.warriormenu" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.warriormenu.GlobalApp"
        android:allowBackup="true"
        android:icon="@drawable/icon_wm"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.warriormenu.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.warriormenu.MenuActivity" >
        </activity>
        <activity android:name="com.warriormenu.SingleActivity" >
        </activity>
        <activity
            android:name="com.warriormenu.MainActivity">
        </activity>
        <activity android:name=".InfoActivity"></activity>
    </application>

</manifest>
